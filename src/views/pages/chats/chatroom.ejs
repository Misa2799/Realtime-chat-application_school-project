<div>Chatroom</div>

<div class="globalContainer">
  <div class="chatContainer">
    <ul class="timeLine">
      <li class="timeLine__list">
        <p id="name">Yusuke</p>
        <p id="message">TextTextTextTextTextTextTextTextTextTextTextTextText</p>
      </li>
    </ul>
    <p class="activity"></p>
  </div>
  <div class="messageContainer">
    <p class="userName hidden"><%= userName %></p>
    <form action="/chats/<%= chat._id%>" method="POST">
      <input
        class="messageContainer__input"
        type="text"
        name="content"
        placeholder="message..."
        required
      />
      <button class="messageContainer__submit" type="submit">Send</button>
    </form>
  </div>
</div>
